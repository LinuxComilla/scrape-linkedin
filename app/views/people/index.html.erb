<h1>Listing people (<%= Person.count %> total)</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Entrepreneur?</th>
    <th>Firm</th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= link_to(truncate(person.to_s, :length => 40), link_to_profile(person), :target => :top) %></td>
		<td><%= person.entrepreneur %></td>
		<td><%= person.consulting_firm.to_s.titleize %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New person', new_person_path %>